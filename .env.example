# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# Agent Configuration
AGENT_NAME=AutonomousAgent
AGENT_MODE=autonomous
MAX_ITERATIONS=10
ENABLE_SELF_IMPROVE=true
ITERATION_DELAY_SECONDS=2

# Token Budget Configuration (Important for cost control!)
MAX_TOKENS_PER_RESPONSE=1024  # Max tokens per LLM response (was 4096, reduced for efficiency)
MAX_TOTAL_TOKENS_PER_TASK=20000  # Total token budget per task (stops if exceeded)
HISTORY_KEEP_LAST_N=3  # Only keep last N iterations in context to save tokens

# Orchestrator Configuration (Anti-Looping System)
USE_DUAL_ORCHESTRATOR=true  # Use new dual orchestrator with intelligent routing
ENABLE_TASK_CLASSIFICATION=true  # Classify tasks before entering ReAct loop
ENABLE_ANSWER_VALIDATION=true  # Auto-stop when answer is sufficient

# System Access Configuration
ALLOW_SYSTEM_ACCESS=true
SANDBOX_MODE=true
WORKING_DIRECTORY=/workspace

# Safety Limits
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=.py,.txt,.md,.json,.yaml,.yml,.sh,.js,.ts,.html,.css
BLOCKED_PATHS=/etc,/sys,/proc,/root
COMMAND_TIMEOUT_SECONDS=300

# Superuser Mode (DANGER - Use with extreme caution!)
# WARNING: Only enable in trusted, isolated environments
# Allows execution of sudo commands for system-level operations
SUPERUSER_MODE=false
REQUIRE_SUDO_CONFIRMATION=true  # Require confirmation before sudo commands

# Database
REDIS_URL=redis://localhost:6379
POSTGRES_URL=postgresql://user:password@localhost:5432/agent_db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agent.log
